{
   "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "esModuleInterop": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "baseUrl": "src",
      "paths": {
         "app": ["app/*"],
         "pages": ["pages/*"],
         "widgets": ["widgets/*"],
         "shared": ["shared/*"]
      }
   },
   "include": [
      "src/index.tsx"
   ]
}